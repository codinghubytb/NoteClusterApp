                HeightRequest="32"
                Source="close.svg" 
                Clicked="ImageButton_Clicked"/>
            <Label Text="Edit Note" 
                HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   VerticalOptions="CenterAndExpand"/>
